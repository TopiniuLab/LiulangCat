.bg-img{
  width: 100%;
  position: fixed;
  top: 0;
  overflow: hidden;
  z-index: -999;
}
.info-container{
  width: 338px;
  border-radius: 6px;
  box-shadow: 0 1px 8px rgba(0,0,0,0.2);
  margin: 0 auto;
  background-color: white;
  margin-top: 20px;
}
.detail-container{
  margin-top: 10px;
  padding: 0 10px 10px 10px;
  
}
.name-box{
  font-size: 24px;
  font-weight: bolder;
  margin-bottom: 10px;
  position: absolute;
  bottom: 20px;
  left: 10px;
  color: white;
}
.text{
  display: inline;
}
.short{
  width: 95%;
  margin: 0 auto;
}
.desc{
  font-size: 14px;
  display: flex;
  margin-bottom: 6px;
  transition: all .3s;
}
.desc-text{
  font-size: 16px;
  width: 70%;
  padding-left: 2px;
}
.title{
  width: 25%;
  text-align: right;
}
.q{
  width: 80%;
  font-size: 10px;
  color: #999;
}
.show-map{
  transform: scale(1.1)
}