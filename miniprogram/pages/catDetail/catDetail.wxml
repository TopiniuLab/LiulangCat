<view style='height:{{containerHeight*2}}rpx;width: 100%;float: left'>
  <image mode='aspectFill' class='bg-img' style='height:{{containerHeight*2}}rpx;filter: blur(20rpx)' src='{{catDetail.photos[0]}}'>
  </image>

  <view class='info-container'>
    <view class='img-container' style='position: relative'>
      <swiper style='width: 100%; height: 676rpx;' indicator-dots='{{false}}' autoplay interval='7000'>
        <block wx:key="id" wx:for='{{catDetail.photos}}'>
          <swiper-item>
            <image style='width: 100%;height: 676rpx; border-radius: 12rpx 12rpx 0 0;' mode='aspectFill' src='{{item}}'></image>
          </swiper-item>
        </block>
      </swiper>
      <view class='name-box'>
       <view style='margin-bottom: -10px;'>
       {{time}}
       </view>
       <view>
       {{date}}
       </view>
      </view>
    </view>
    <view class='detail-container'>
      <view class='desc short'>
        <view class='title'>
          详细信息：
        </view>
        <view class='desc-text'>{{catDetail.description}}</view>
      </view>
      <view class='desc short' bindtap='openLocation' hover-class='show-map'>
        <view class='title'>
          地址：
          <view class='q'>
            点击打开地图
          </view>
        </view>
        <view class='desc-text'>{{catDetail.address}}</view>
      </view>
      <view class='desc short' hover-class='show-map'>
        <view class='title'>
          流浪猫吗：
        </view>
        <view class='desc-text'>{{catDetail.isStary?'是':'不是'}}</view>
      </view>
      <view class='desc short' hover-class='show-map'>
        <view class='title'>
          {{catDetail.contactType.name}}：
        </view>
        <view class='desc-text'>{{catDetail.contactValue}}</view>
      </view>
      <view class='desc short' hover-class='show-map'>
        <view class='title'>
          创建时间：
        </view>
        <view class='desc-text'>{{catDetail.createTime}}</view>
      </view>
    </view>
  </view>
</view>