<view>

  <map
    id="map"
    latitude='{{latitude}}'
    longitude='{{longitude}}' 
    scale='{{scale}}'
    show-location
    style="width: 100%; height: {{containerHeight}}px"
    markers="{{myMarkers}}"
    bindmarkertap='onMarkerClick'>

      <cover-image 
        class='location-btn' 
        bindtap='go'
        src='../../public/imgs/icon_location.png'
        />
      <cover-view wx:if='{{!isHideDetailWrap}}' class='detail-wrap'>
        <cover-image src='{{detail.photos[0]}}' style='width: 744rpx; height: 475rpx'></cover-image>

      <cover-view class='text-container'>
        <cover-view class='wrap-text'>
          {{detail.createTime}}
        </cover-view>
        <cover-view class='wrap-text'>
          @{{detail.address}}
        </cover-view>
      </cover-view>
      </cover-view>
  </map>

</view>