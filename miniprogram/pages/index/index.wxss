/* pages/index/index.wxss */

.location-btn{
  width: 35px;
  height: 35px;
  margin-right: 15px;
  margin-top: 20px;
  /* margin-bottom: 55px; */
  position:fixed; 
  /* bottom:0;  */
  right: 0;
  background-color: #ffffff;
  border-radius:25px;
  box-shadow: 5rpx 8rpx 8rpx gray;
}

.detail-wrap{
  width: 700rpx;
  height: 475rpx;
  background-color: white;
  position:absolute; 
  top: 80rpx;
  left: 50%;
  transform: translate(-50%,0);
  border-radius: 6px;
  z-index: 9999;
  box-shadow: 0 1px 8px rgba(0,0,0,0.2);
}
.wrap-text{
  white-space:pre-wrap;
  text-align:left;
  font-size:16px;
  text-shadow:  0 2rpx 16rpx rgba(0,0,0,0.6);
  color: white;
}
.text-container{
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom:10px;
  left:10px;
  width:95%;
}